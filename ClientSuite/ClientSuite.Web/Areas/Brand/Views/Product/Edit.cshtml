@model ClientSuite.Models.Product

<script src="~/theme/bc/ckeditor/ckeditor.js"></script>
@Html.AjaxFormSubmiterV2("myForm", "tbProduct", true,  Localizer["ActionSuccess"].Value)

<form id="myForm" asp-action="Edit" role="form" enctype="multipart/form-data">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = Localizer["FillRequired"].Value })
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Name" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Picture" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <div class="btn btn-default btn-file">
                            <i class="fa fa-paperclip"></i>
                            Picture
                            <input asp-for="Picture" type="file" style="margin-top:10px" />
                        </div>
                        <input type="hidden" name="Picture3" value="@Model.Picture" />
                    </div>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Price" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <input asp-for="Price" class="form-control" />
                    </div>
                </div>
               
                <div class="form-group">
                    <label asp-for="IsActive" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <input asp-for="IsActive" style="margin-top:10px" type="checkbox" />
                    </div>
                </div>

            </div>
        </div>
        <div class="row">

            <div class="col-lg-12">

                <div class="form-group">
                    <label asp-for="Description" class="col-lg-10 col-sm-10 control-label"></label>
                    <div class="col-lg-11">
                        <textarea asp-for="Description" class="form-control ckeditor"></textarea>
                        <script>$(function () { CKEDITOR.instances["Description"].destroy(); CKEDITOR.replace('Description'); });</script>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { CancelButtonText = Localizer["Cancel"].Value, SubmitButtonText = Localizer["Submit"].Value })
</form>
