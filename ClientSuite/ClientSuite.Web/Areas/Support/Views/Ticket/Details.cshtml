@model ClientSuite.Models.Ticket

<script src="~/theme/bc/ckeditor/ckeditor.js"></script>
<link href="~/theme/Select2/select2.min.css" rel="stylesheet" />
<script src="~/theme/Select2/select2.full.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.select2').select2({ maximumSelectionLength: 1 });
    });
</script>

<section class="content-wrapper">

    <div class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                     
                    <div class="box-body" style="overflow-x:auto">

                        <div class="modal-body form-horizontal">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="ProductId" class="col-lg-4 col-sm-6 control-label"></label>
                                        <div class="col-lg-6">
                                            <select readonly asp-for="ProductId" asp-items="ViewBag.Products" style="width: 100%" class="form-control select2"><option value="">Select</option> </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TicketSubject" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                                        <div class="col-lg-6">
                                            <input readonly asp-for="TicketSubject" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PriorityId" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                                        <div class="col-lg-6">
                                            <select readonly asp-for="PriorityId" asp-items="ViewBag.Prioritys" style="width: 100%" class="form-control select2"><option value="">Select</option> </select>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label asp-for="Attachment" class="col-lg-4 col-sm-6 control-label"></label>
                                        <div class="col-lg-6">
                                            @if (!string.IsNullOrEmpty(Model.Attachment))
                                            {
                                                <a target="_blank" href="@Model.Attachment">Open Attached file</a>
                                            }

                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-6">
                                    
                                    <div class="form-group">
                                        <label asp-for="IsClose" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                                        <div class="col-lg-6">
                                            <input readonly asp-for="IsClose" style="margin-top:10px" type="checkbox" />
                                        </div>
                                    </div>
                                  
                                    <div class="form-group">
                                        <label asp-for="ParentId" class="col-lg-4 col-sm-6 control-label"></label>
                                        <div class="col-lg-6">
                                            <select  readonly asp-for="ParentId" asp-items="ViewBag.Tickets" style="width: 100%" class="form-control select2"><option value="">Select</option> </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="IsKnowledgeBase" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                                        <div class="col-lg-6">
                                            <input  readonly asp-for="IsKnowledgeBase" style="margin-top:10px" type="checkbox" />
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="row">

                                <div class="col-lg-12">

                                    <div class="form-group">
                                        <label asp-for="TicketBody" class="col-lg-12 control-label"></label>
                                        <div class="col-lg-12"> 
                                            @Html.Raw(Model.TicketBody)
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>




                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
