@model ClientSuite.Models.RequestModels.ClientRequestModel

<link href="~/theme/Select2/select2.min.css" rel="stylesheet" />
<script src="~/theme/Select2/select2.full.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.select2').select2({ maximumSelectionLength: 1 });
    });
</script>
<link href="~/datetimepicker/jquery.datetimepicker.min.css" rel="stylesheet" />
<script src="~/datetimepicker/jquery.datetimepicker.full.min.js"></script>
<script>$(function () { jQuery.datetimepicker.setLocale('@Env.CurrentCulture()'); });</script>

@Html.AjaxFormSubmiterV2("myForm", "tbUser", true, Localizer["ActionSuccess"].Value)

<form id="myForm" asp-action="CreateClient" role="form" enctype="multipart/form-data">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = Localizer["FillRequired"].Value })
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="UserName" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <input asp-for="UserName" class="form-control" />
                    </div>
                </div>

                <div class="form-group" style="border: 1px solid dodgerblue;margin-right: 10px;padding: 3px;">
                    <p style="color:red;">Note: Create Password.</p>
                    <label asp-for="Password" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6" style="margin-bottom:5px;">
                        <input type="password" asp-for="Password" class="form-control" />
                    </div>
                    <label class="col-lg-4 col-sm-6 control-label">Confirm Password</label>
                    <div class="col-lg-6">
                        <input type="password" name="NewPasswordConfirm" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="RoleId" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <select asp-for="RoleId" asp-items="ViewBag.Roles" multiple="multiple" style="width: 100%" class="form-control select2"><option value="">Select</option> </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-6">
                        <input type="hidden" asp-for="DateAdded" value="@DateTime.Now.ToTimeZoneDate()" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-6">
                        <input type="hidden" asp-for="DateModified" value="@DateTime.Now.ToTimeZoneDate()" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="FullName" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MobileNumber" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <input asp-for="MobileNumber" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IsActive" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <input asp-for="IsActive" style="margin-top:10px" type="checkbox" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ProductId" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <select asp-for="ProductId" asp-items="ViewBag.Products" multiple="multiple" style="width: 100%" class="form-control select2"><option value="">Select</option> </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PurchaseStatusId" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <select asp-for="PurchaseStatusId" asp-items="ViewBag.PurchaseStatuss" multiple="multiple" style="width: 100%" class="form-control select2"><option value="">Select</option> </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FollowUpDate" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input type="text" asp-for="FollowUpDate" class="form-control" value="@Env.DateTimeValue()" />
                        @Env.DateTimeCalender("FollowUpDate")
                    </div>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="CategoryId" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <select asp-for="CategoryId" asp-items="ViewBag.Categorys" multiple="multiple" style="width: 100%" class="form-control select2"><option value="">Select</option> </select>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="IsConfirm" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <input asp-for="IsConfirm" style="margin-top:10px" type="checkbox" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePicture" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <div class="btn btn-default btn-file">
                            <i class="fa fa-paperclip"></i>
                            ProfilePicture
                            <input asp-for="ProfilePicture" type="file" style="margin-top:10px" />
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CurrencyId" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <select asp-for="CurrencyId" asp-items="ViewBag.Currencys" multiple="multiple" style="width: 100%" class="form-control select2"><option value="">Select</option> </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyName" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <input asp-for="CompanyName" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyPhone" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="CompanyPhone" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyMobile" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="CompanyMobile" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyAddress" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <textarea asp-for="CompanyAddress" class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CountryId" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <select asp-for="CountryId" asp-items="ViewBag.Countrys" multiple="multiple" style="width: 100%" class="form-control select2"><option value="">Select</option> </select>
                    </div>
                </div>

            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { CancelButtonText = Localizer["Cancel"].Value, SubmitButtonText = Localizer["Submit"].Value })
</form>
