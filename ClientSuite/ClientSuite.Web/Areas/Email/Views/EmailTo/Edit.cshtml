@model ClientSuite.Models.EmailTo

@Html.AjaxFormSubmiterV2("myForm", "tbEmailTo", true,  Localizer["ActionSuccess"].Value)

<form id="myForm" asp-action="Edit" role="form" enctype="multipart/form-data">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = Localizer["FillRequired"].Value })
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="EmailMessageId" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <input asp-for="EmailMessageId" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="ToUserId" class="col-lg-4 col-sm-6 control-label"></label><label class="star-required control-label">*</label>
                    <div class="col-lg-6">
                        <input asp-for="ToUserId" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-6">
                        <input type="hidden" asp-for="DateCreated" value="@DateTime.Now.ToTimeZoneDate()" />
                    </div>
                </div>

            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { CancelButtonText = Localizer["Cancel"].Value, SubmitButtonText = Localizer["Submit"].Value })
</form>
